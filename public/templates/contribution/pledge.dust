{>"layouts/master" /}

{<body}
  {@eq key=lastAction value="vote"}
    <h3>Thanks for Voting!  Ready to Make a Pledge?</h3>
  {:else}
    <h3>Make a Pledge</h3>
  {/eq}

  Proposal:<br/>
  {#proposal}
    id: {_id}<br/>
    title: {title}<br/>
    summary: {summary}<br/>

    <fieldset>
      <form method="post" action="/c/pledge">
        <input type="hidden" name="proposalId" value="{_id}"><br>
        {#item}
          Pledged Capital Contribution: <input type="text" name="pledgedCapital"><br>
          Pledged Customer Patronage: <input type="text" name="pledgedPatronage"><br>
        {/item}
        <input type="hidden" name="_csrf" value="{_csrf}">
        <input type="submit" value="Pledge">
      </form>
    </fieldset>

  {/proposal}

{/body}
